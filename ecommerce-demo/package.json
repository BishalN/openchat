{
    "name": "ecommerce-demo",
    "version": "1.0.0",
    "description": "Demo e-commerce platform for custom actions integration",
    "main": "api/index.ts",
    "scripts": {
        "dev": "concurrently \"npm run dev:api\" \"npm run dev:frontend\"",
        "dev:api": "tsx watch api/index.ts",
        "dev:frontend": "cd frontend && npm run dev",
        "build": "npm run build:api && npm run build:frontend",
        "build:api": "tsc api/index.ts --outDir dist",
        "build:frontend": "cd frontend && npm run build",
        "start": "node dist/index.js"
    },
    "dependencies": {
        "hono": "^3.12.0",
        "@hono/node-server": "^1.8.0",
        "crypto": "^1.0.1"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "typescript": "^5.0.0",
        "tsx": "^4.0.0",
        "concurrently": "^8.0.0"
    }
}